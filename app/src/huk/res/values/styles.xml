<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base styles to allow easy overriding for other resource qualifiers -->
    <style name="Gini.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarTheme">@style/Gini.ThemeOverlay.ActionBar</item>
    </style>

    <style name="Gini.ThemeOverlay.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/action_bar</item>
        <item name="homeAsUpIndicator">@drawable/gv_action_bar_back</item>
    </style>

    <style name="Gini.TextAppearance.SettingsHeader" parent="Gini.TextAppearance.Title">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Gini.Button.Colored" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="GiniVisionTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarTheme">@style/Gini.ThemeOverlay.ActionBar</item>
    </style>

</resources>
