<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.gini.android.gvlexample">

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:node="replace" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".GVLExampleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="net.hockeyapp.android.appIdentifier"
            android:value="${HOCKEYAPP_APP_ID}" />

        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GVLExampleActivity"
            android:label="">
            <intent-filter
                android:label="@string/app_name"
                tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/png" />
                <data android:mimeType="image/jpeg" />
                <data android:mimeType="image/gif" />
                <data android:mimeType="application/pdf" />
            </intent-filter>
        </activity>
        <activity
            android:name=".info.InfoActivity"
            android:label="@string/info_activity_title" />
        <activity
            android:name=".results.ResultsActivity"
            android:label="@string/results_activity_title"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".NoPdfResultsActivity"
            android:label="@string/no_pdf_results_activity_title" />
        <activity
            android:name=".gini.CameraActivity"
            android:label="@string/gv_title_camera"
            android:theme="@style/GiniVisionTheme" />
        <activity
            android:name=".gini.AnalysisActivity"
            android:label="@string/gv_title_analysis"
            android:theme="@style/GiniVisionTheme" />
        <activity
            android:name=".gini.ReviewActivity"
            android:label="@string/gv_title_review"
            android:theme="@style/GiniVisionTheme" />
    </application>

</manifest>