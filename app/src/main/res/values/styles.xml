<resources>

    <!-- Base styles to allow easy overriding for other resource qualifiers -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Base.AppTheme.SplashActivity">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Styles referenced in the app -->

    <style name="AppTheme" parent="Base.AppTheme"/>
    <style name="AppTheme.SplashActivity" parent="Base.AppTheme.SplashActivity"/>

</resources>
